<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextArea fx:id="textArea" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="330" prefHeight="440"/>
    <HBox GridPane.rowIndex="1" GridPane.columnIndex="0">
        <TextField fx:id="textField" onAction="#onClickEnter" prefWidth="290"/>
        <Button text="Send" onAction="#onClickSend"/>
    </HBox>

</GridPane>